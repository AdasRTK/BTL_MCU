#include "fsm_manual.h"

void fsm_manual_run(){

	switch (status) {
		case MAN_RED:
			HAL_GPIO_WritePin(LED_RED_HORI_GPIO_Port, LED_RED_HORI_Pin, RESET);
			if(isButtonPressed(1) == 1){
				status = MAN_YELLOW;
			}
			break;
		case MAN_YELLOW:

			HAL_GPIO_WritePin(LED_RED_HORI_GPIO_Port, LED_RED_HORI_Pin, SET);
			if(isButtonPressed(1) == 1){
				status = MAN_GREEN;
			}
			break;
		case MAN_GREEN:
			HAL_GPIO_WritePin(LED_RED_HORI_GPIO_Port, LED_RED_HORI_Pin, RESET);
			if(isButtonPressed(1) == 1){
				status = INIT;
			}
			break;
		default:
			break;
	}
}
